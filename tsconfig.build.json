{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "rootDir": "src",  
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/pages/*": ["src/pages/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/locales/*": ["src/locales/*"],
      "@/state/*": ["src/state/*"],
      "@/assets/*": ["src/assets/*"],
      "@/lib/*": ["src/lib/*"],
      "@/types/*": ["src/types/*"],
      "@/shared/*": ["src/components/shared/*"],
      "@/utils/*": ["src/utils/*"],
      "@/atoms/*": ["src/atoms/*"],
      "@/store/*": ["src/store/*"]
    }
  },
  "include": ["src"]
}
